<%- include('../partials/header') %>

<!-- HERO BÖLÜMÜ -->
<section class="text-white d-flex align-items-center" style="height: 450px; background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('/images/ofis.jpg') center/cover no-repeat;">
  <div class="container text-center">
    <h1 class="display-5 fw-bold mb-3">Profesyonel Taşımacılığa İlk Adım</h1>
    <p class="lead mb-4">Dakik, güvenli ve profesyonel taşımacılık için bir adım önde olun.</p>
    <a  href="/basvurular#basvuru-formu" class="btn btn-outline-light btn-lg px-4 py-2">Hemen Başvurun</a>
  </div>
</section>


<!-- FORM & HARİTA -->
<section class="bg-light py-5">
  <div class="container">
    <div class="row g-4">

      <!-- FORM -->
      <div class="col-md-6">
        <div class="shadow rounded p-4 bg-white">
   <% if (success) { %>
    <div id="successAlert" class="alert alert-success" role="alert">
      ✅ Mesajınız başarıyla gönderildi.
    </div>
   <% } %>

   <% if (error) { %>
    <div id="errorAlert" class="alert alert-danger" role="alert">
      ❌ Mesaj gönderilemedi. Lütfen tekrar deneyin.
    </div>
   <% } %>

   <% if (recaptchaError) { %>
    <div class="alert alert-warning" role="alert">
      ⚠️ Lütfen robot olmadığınızı doğrulayın.
    </div>
   <% } %>

          <h4 class="fw-bold mb-4">İletişim Formu</h4>
<form action="/iletisim" method="POST">
  <input type="text" name="ad" class="form-control mb-3" placeholder="Adınız" required>
  <input type="text" name="soyad" class="form-control mb-3" placeholder="Soyadınız" required>
  <input type="email" name="email" class="form-control mb-3" placeholder="E-posta adresiniz" required>
  <textarea name="mesaj" class="form-control mb-3" rows="5" placeholder="Mesajınızı yazın..." required></textarea>

  <!-- reCAPTCHA tam genişlik ve site anahtarı ile -->
<div class="form-group mb-3">
  <div class="recaptcha-wrapper">
    <div class="g-recaptcha" data-sitekey="6LdiOpkrAAAAAJJnAdtq57uM1v_F47XsqulMt-St"></div>
  </div>
</div>

  <button type="submit" class="btn btn-dark w-100">Gönder</button>
</form>
        </div>
      </div>

      <!-- HARİTA -->
      <div class="col-md-6">
        <div class="shadow rounded overflow-hidden">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d385396.6059676668!2d29.01217945!3d41.0053215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1770316039906!5m2!1str!2str" width="100%" height="100%" style="border:0; min-height: 400px;" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

