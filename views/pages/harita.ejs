<!-- HEDEFLERİMİZ -->
<section class="py-5" style="background-color: #004080; color: #ffffff;">
  <div class="container">
    <h2 class="text-center fw-bold mb-5">Hedeflerimiz</h2>
    <div class="row g-4 text-center">
      <div class="col-md-6">
        <div class="bg-white text-dark rounded p-4 shadow-sm h-100">
          <i class="bi bi-bullseye fs-1 text-success mb-3"></i>
          <h4 class="fw-bold">Misyonumuz</h4>
          <p>Türkiye genelinde güvenli, dakik ve konforlu ulaşımı herkese ulaştırmak.</p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="bg-white text-dark rounded p-4 shadow-sm h-100">
          <i class="bi bi-binoculars fs-1 text-primary mb-3"></i>
          <h4 class="fw-bold">Vizyonumuz</h4>
          <p>Taşımacılık sektöründe dijitalleşme ve müşteri memnuniyetinde lider olmak.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- GALERİ -->
<!-- GALERİ -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center fw-bold text-dark mb-5">Galerimiz</h2>
    <div class="row g-4">
      <% 
        const galeriler = ["galeri1.jpg", "galeri2.jpg", "galeri3.jpg", "galeri4.jpg", "galeri5.jpg", "galeri6.jpg"];
        const basliklar = [
          "Kurucularımız ve İlk Araçlarımız",
          "Merkez Ofisimizden Görüntüler",
          "Araç Filomuz",
          "Hürriyet Gazetesi Haberi",
          "Yigiturtur Logosu",
          "Sabah Gazetesi Haberi"
        ]; 
      %>
      <% galeriler.forEach((g, i) => { %>
        <div class="col-md-4">
          <div class="rounded overflow-hidden shadow-sm position-relative gallery-card">
            <!-- Lightbox için anchor ile sar -->
            <a href="/images/<%= g %>" 
               class="glightbox" 
               data-gallery="galeri1" 
               data-title="<%= basliklar[i] %>">
              <img src="/images/<%= g %>" 
                   class="img-fluid rounded gallery-img" 
                   alt="<%= basliklar[i] %>" 
                   loading="lazy">
            </a>
            <div class="position-absolute bottom-0 w-100 text-center text-white bg-dark bg-opacity-50 py-1">
              <%= basliklar[i] %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css">
<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
<script>
  const lightbox = GLightbox({
    selector: '.glightbox',
    touchNavigation: true,
    loop: true,
    zoomable: true
  });
</script>

<style>
  .gallery-card { transition: transform .2s ease, box-shadow .2s ease; }
  .gallery-card:hover { transform: translateY(-3px); box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,.15); }
</style>



